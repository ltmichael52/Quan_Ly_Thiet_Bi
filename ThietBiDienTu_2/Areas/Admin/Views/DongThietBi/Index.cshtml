                    <a class="page-link" asp-action="Index" asp-route-page="@Model.PageCount">Last</a>
                    </li>
                    }
                    </ul>
                    </nav>*@
                </div>
            </div>
        </div>
    </div>
</div>

<div class="footer"></div>
<style>
    .thumbnail-image {
        max-width: 100px; /* Adjust the maximum width as needed */
        max-height: 100px; /* Adjust the maximum height as needed */
    }
</style>

