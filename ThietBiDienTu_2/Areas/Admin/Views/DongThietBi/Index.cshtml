@model IEnumerable<ThietBiDienTu_2.Areas.Admin.ViewModels.DongThietBiViewModel>

@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@{
    ViewData["Title"] = "Index";
}
<script>
    $(document).ready(function () {
        setTimeout(function () {
            console.log("here");
            $('#notify').css("display", "none");
        }, 10000);
    });
</script>
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success" id="notify">
        <strong>Thành công!</strong> @TempData["AlertMessage"]
    </div>
}

@if (TempData["DangerMessage"] != null)
{
    <div class="alert alert-danger" id="notify">
        <strong>Thất bại!</strong> @TempData["DangerMessage"]
    </div>
}

@section naviheader{
    <div class="header-divider"></div>
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin/HomeAdmin/Index">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Dòng thiết bị</li>
            </ol>
        </nav>
    </div>
}
<div class="container mt-3">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    <h3 class="card-title">Danh sách dòng thiết bị</h3>
                </div>
                <div class="col-auto">
                    <div class="card-tools">
                        <a asp-action="CreateTool" asp-controller="DongThietBi" class="btn btn-primary btn-sm">
                            <svg class="icon icon-lg">
                                <use xlink:href="@Url.Content("~/LayoutAdmin/dist/vendors/_coreui/icons/svg/free.svg#cil-plus")"></use>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="bs-stepper linear">
                <div class="bs-stepper-content">
                    <div class="table-responsive">
                        <table class="table table-striped text-center">
                            <thead>
                                <tr class="text-center">
                                    <th>STT</th>
                                    <th>Ảnh</th>
                                    <th>Tên Thiết bị</th>
                                    <th>Tổng SL</th>
                                    <th>SL hoạt động</th>
                                    <th>SL hư</th>
                                    <th>SL sẵn sàng</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                @{
                                    int i = 0;
                                    // Sắp xếp danh sách theo mã dòng thiết bị giảm dần
                                    var sortedModel = Model.OrderByDescending(d => d.Madongtb);
                                }
                                @foreach (var dtb in sortedModel)
                                {
                                    <tr>
                                        <td>@(++i)</td>
                                        <td class="text-center">
                                            <img src="@Url.Content("~/images/" + dtb.Hinhanh)" class="card-image-top thumbnail-image" />
                                        </td>
                                        <td class="text-center">@Html.DisplayFor(modelItem => dtb.Tendongtb)</td>
                                        <td class="text-center">@Html.DisplayFor(modelItem => dtb.Soluong)</td>
                                        <td class="text-center">@Html.DisplayFor(modelItem => dtb.SoLuongHoatDong)</td>
                                        <td class="text-center">@Html.DisplayFor(modelItem => dtb.SoLuongHu)</td>
                                        <td class="text-center">@Html.DisplayFor(modelItem => dtb.SoLuongTonKho)</td>
                                        <td class="text-center">
                                            <a class="btn btn-success btn-sm rounded" asp-controller="ThietBi" asp-action="ThietBiList" asp-route-searchStringThietBi="@dtb.Tendongtb">
                                                <svg class="icon icon-lg">
                                                    <use xlink:href="@Url.Content("~/LayoutAdmin/dist/vendors/_coreui/icons/svg/free.svg#cil-file")"></use>
                                                </svg>
                                            </a>
                                            <a class="btn btn-info btn-sm rounded" asp-controller="DongThietBi" asp-action="Edit" asp-route-id="@dtb.Madongtb">
                                                <svg class="icon icon-lg">
                                                    <use xlink:href="@Url.Content("~/LayoutAdmin/dist/vendors/_coreui/icons/svg/free.svg#cil-pen")"></use>
                                                </svg>
                                            </a>
                                            <a onclick="if (confirm('Xác nhận xóa dòng thiết bị này?') == true) {location.href='/admin/DongThietBi/Delete/@dtb.Madongtb'}" class="btn btn-danger btn-sm rounded">
                                                <svg class="icon icon-lg">
                                                    <use xlink:href="@Url.Content("~/LayoutAdmin/dist/vendors/_coreui/icons/svg/free.svg#cil-trash")"></use>
                                                </svg>
                                            </a>

                                            @* <a class ="btn btn-primary" asp-controller="DongThietBi" asp-action="Themthiebi" asp-route-id="@dtb.Madongtb"></a> *@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="footer"></div>


<style>
    .thumbnail-image {
        max-width: 60px; /* Adjust the maximum width as needed */
        max-height: 60px; /* Adjust the maximum height as needed */
    }
</style>
