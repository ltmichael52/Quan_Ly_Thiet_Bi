@model ThietBiDienTu_2.Models.Dongthietbi

@{
    ViewData["Title"] = "Details";
}

<h2 class="text-center mt-4 mb-4">CHI TIẾT DÒNG THIẾT BỊ</h2>

@section naviheader{
    <div class="header-divider"></div>
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin/HomeAdmin/Index">Home</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "DongThietBi", new { area = "Admin" })">Dòng thiết bị</a></li>
                <li class="breadcrumb-item active" aria-current="page">Chi tiết dòng thiết bị</li>
            </ol>
        </nav>
    </div>
}
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Tên dòng thiết bị</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Tendongtb)</dd>

            <dt class="col-sm-3">Số lượng</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Soluong)</dd>

            <dt class="col-sm-3">Mô tả</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Mota)</dd>

            <dt class="col-sm-2">
                <img src="@Url.Content("~/images/" + Model.Hinhanh)" class="card-image-top thumbnail-image" />
            </dt>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Madongtb">Chỉnh sửa</a>
    <a class="btn btn-secondary" asp-action="Index">Trở lại</a>
</div>


<style>
    .thumbnail-image {
        max-width: 100px; /* Adjust the maximum width as needed */
        max-height: 100px; /* Adjust the maximum height as needed */
    }
</style>
