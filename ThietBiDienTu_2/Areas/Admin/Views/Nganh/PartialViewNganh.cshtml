@model IEnumerable<ThietBiDienTu_2.Models.Nganh>

<table class="table table-striped">
    <thead class="text-center">
        <tr>
            <th>STT</th>
            <th>Tên Ngành</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody class="text-center">
        @{
            int count = 0;
        }
        @foreach (var nganh in Model)
        {
            <tr>
                <td>@(++count)</td>
                <td>@nganh.Tennganh</td>
                <td>
                        <a class="btn btn-info btn-sm rounded" href="@Url.Action("Edit", "Nganh", new { id = nganh.Manganh })">
                        <svg class="icon icon-lg">
                            <use xlink:href="@Url.Content("~/LayoutAdmin/dist/vendors/_coreui/icons/svg/free.svg#cil-pen")"></use>
                        </svg>
                    </a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Nganh", new { id = nganh.Manganh })">
                        <svg class="icon icon-lg">
                            <use xlink:href="@Url.Content("~/LayoutAdmin/dist/vendors/_coreui/icons/svg/free.svg#cil-trash")"></use>
                        </svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>