@using ThietBiDienTu_2.Areas.Admin.ViewModels;
@using ThietBiDienTu_2.Models;
@{
    ViewData["Title"] = "Create ToolDetail";
}

@model ToolDetailAdmin
@section naviheader{
    <div class="header-divider"></div>
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin/HomeAdmin/Index">Home</a></li>
                <li class="breadcrumb-item"><a href="/Admin/ToolDetail/ToolDetailList">Danh sách chi tiết thiết bị</a></li>
                <li class="breadcrumb-item active" aria-current="page">Tạo chi tiết thiết bị</li>
            </ol>
        </nav>
    </div>
}
<!-- Content Header (Page header) -->
<div class="card">
    <div class="card-header">
        <h3>Thêm sinh viên</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <!-- Left Column for Image -->
            <div class="col-md-6 d-flex justify-content-center align-items-center flex-column">
                <img src="~/images/2.jpg" id="imgProduct" class="img-fluid" alt="Product Image" style="border:solid 2px #ccc;">
                <h5 class="mt-3">Ảnh thiết bị</h5>
            </div>

            <!-- Right Column for Form -->
            <div class="col-md-6">
                <div class="bs-stepper linear">
                    <div class="bs-stepper-content">
                        <form asp-controller="ToolDetail" asp-action="CreateToolDetail">
                            <!-- your steps content here -->
                            <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                                <input asp-for="@Model.HinhAnh" value="123" hidden/>
                                <div class="row">
                                    <div class="col-md-6" style="width:40%">
                                        <div class="form-group mb-2">
                                            <label class="mb-2"><strong>Loại thiết bị<span class="text-danger"> *</span></strong></label>
                                            <select class="form-control">
                                                <option value="all">Loại thiết bị</option>
                                                @foreach(SelectListItem items in ViewBag.LoaiList)
                                                {
                                                    <option value="@items.Value">@items.Text</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6" style="width:60%">
                                        <div class="form-group mb-2">
                                            <label asp-for="@Model.Thietbi" class="mb-2"><strong>Tên thiết bị<span class="text-danger"> *</span></strong></label>
                                            <select asp-for="@Model.Thietbi" class="form-control">
                                                <option value="all">Tên thiết bị</option>
                                                @foreach (SelectListItem items in ViewBag.TbList)
                                                {
                                                    <option value="@items.Value">@items.Text</option>
                                                }
                                            </select>
                                            <span asp-validation-for="@Model.Thietbi" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mb-2">
                                    <label asp-for="@Model.Seri" class="mb-2"><strong>Seri thiết bị<span class="text-danger"> *</span></strong></label>
                                    <input asp-for="@Model.Seri" class="form-control" />
                                    <span asp-validation-for="@Model.Seri" class="text-danger"></span>
                                </div>
                                <div class="row">
                                    <div class="col-md-6" style="width:40%">
                                        <div class="form-group mb-2">
                                            <label asp-for="@Model.CoSo" class="mb-2"><strong>Cơ sở<span class="text-danger"> *</span></strong></label>
                                            <select asp-for="@Model.CoSo" class="form-control">
                                                <option value="all">Cơ sở</option>
                                                @foreach (SelectListItem items in ViewBag.CoSoList)
                                                {
                                                    <option value="@items.Value">@items.Text</option>
                                                }
                                            </select>
                                            <span asp-validation-for="@Model.CoSo" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6" style="width:60%">
                                        <div class="form-group mb-2">
                                            <label asp-for="@Model.Phong" class="mb-2"><strong>Phòng<span class="text-danger"> *</span></strong></label>
                                            <select asp-for="@Model.Phong" class="form-control">
                                                <option value="all">Phòng</option>
                                                @foreach (SelectListItem items in ViewBag.PhongList)
                                                {
                                                    <option value="@items.Value">@items.Text.Split(',')[0]</option>
                                                }
                                            </select>
                                            <span asp-validation-for="@Model.Phong" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                                             
                                <div class="form-group mb-2">
                                    <label class="mb-2"><strong>Loại phòng</strong></label>
                                    <input class="form-control" readonly style="background-color:#E8E8E8" />
                                </div>
                                <div class="form-group mb-2">
                                    <label asp-for="@Model.TrangThai" class="mb-2"><strong>Trạng thái<span class="text-danger"> *</span></strong></label>
                                    <select asp-for="@Model.TrangThai" class="form-control">
                                    </select>
                                    <span asp-validation-for="@Model.TrangThai" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-3">
                                    <a asp-action="ToolDetailList" asp-controller="ToolDetail" class="btn btn-danger">Quay lại</a>
                                    <button type="submit" class="btn btn-primary">Tạo mới</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="footer"></div>