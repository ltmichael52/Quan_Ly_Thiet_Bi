@model Phong
@section naviheader{
    <div class="header-divider"></div>
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin/HomeAdmin/Index">Home</a></li>
                <li class="breadcrumb-item"><a class="linktag" style="cursor:pointer" asp-action="Index" asp-controller="Phong">Danh sách phòng</a></li>
                <li class="breadcrumb-item active" aria-current="page">Cập nhật phòng</li>
            </ol>
        </nav>
    </div>
}
<h1>Chỉnh sửa phòng</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Macs" class="control-label">Tên cơ sở</label>
        <select asp-for="Macs" asp-items="@ViewBag.Coso" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Tenphong" class="control-label">Tên phòng</label>
        <input asp-for="Tenphong" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Loaiphong" class="control-label">Loại phòng</label>
        <select asp-for="Loaiphong" asp-items="@ViewBag.RoomTypes" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Douutien" class="control-label">Độ ưu tiên</label>
        <input asp-for="Douutien" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
    </div>
</form>
