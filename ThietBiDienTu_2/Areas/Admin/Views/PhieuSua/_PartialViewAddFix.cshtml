@using System.Web;
@using ThietBiDienTu_2.Areas.Admin.ViewModels
@model X.PagedList.IPagedList<TbFixAndCheck>

<script>
    
    $(document).ready(function () {
        $('.checkBoxFix').click(function () {
            var matbView = $(this).val();
            $.ajax({
                url: '/admin/Phieusua/AddFix',
                type:'Get',
                data: {
                    matb: matbView
                }
            });
        });

        $('#confirmFixChoosen').click(function () {
            $.ajax({
                url: '/admin/Phieusua/CreatePs',
                type:'Get',
                data: {},
                success: function (response) {
                    $('.card').html(response);
                }
            });
        });
        
    });

</script>
<button type="button" class="btn btn-primary mb-3" data-toggle="modal" data-target="#exampleModal">
    Thêm thiết bị
</button>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="max-width:60%" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Danh sách thiết bị hư</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="CloseModalPopup">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div style="width:100%" class="d-none d-md-flex align-items-center mb-2">
                    <div class="input-group" style="width:50%">
                        <!-- Search bar -->
                        <input name="searchString" id="searchString_ChooseDevices" type="search" placeholder="Tìm tên dòng thiết bị..." class="form-control rounded" aria-label="Search">
                        <a class="btn btn-info rounded mr-2" id="btnSearch_ChooseDevices">
                            <svg class="icon icon-lg">
                                <use xlink:href="@Url.Content("~/LayoutAdmin/dist/vendors/_coreui/icons/svg/free.svg#cil-search")"></use>
                            </svg>
                        </a>
                    </div>
                    <div class="input-group ml-3">
                        <div class="input-group-text">
                            <input class="form-check-input mt-0" type="checkbox" value="" aria-label="Checkbox for following text input">
                        </div>
                        <input type="text" class="form-control" aria-label="Đã chọn" disabled>
                    </div>

                </div>

                <table class="table table-striped text-center">
                    <thead>
                        <tr class="text-center">
                            <th>STT</th>
                            <th>Ảnh</th>
                            <th>Tên Thiết bị</th>
                            <th>Seri</th>
                            <th>Kho</th>
                            <th>Chọn</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = (Model.PageNumber - 1) * Model.PageSize;
                        }
                        @foreach (TbFixAndCheck tbFixCheck in Model)
                        {
                            
                            <tr>
                                <td>@(++index)</td>
                                <td> <img src="@Url.Content("~/images/" + tbFixCheck.Hinhanh)" class="card-image-top thumbnail-image" /></td>
                                <td>@tbFixCheck.Tentb </td>
                                <td>@tbFixCheck.Seri </td>
                                <td>@tbFixCheck.TenKho</td>
                                <td>
                                     <input class="form-check-input checkBoxFix" type="checkbox" value="@tbFixCheck.Matb">

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <nav>
                    <ul class="pagination justify-content-center">
                        <!-- First Page -->
                        @if (Model.PageNumber > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" value="1">Đầu</a>
                            </li>
                        }

                        <!-- Page Numbers -->
                        @for (var i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.PageNumber + 2, Model.PageCount); i++)
                        {
                            <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                                <a class="page-link" value="@i">@i</a>
                            </li>
                        }

                        <!-- Last Page -->
                        @if (Model.PageNumber < Model.PageCount)
                        {
                            <li class="page-item">
                                <a class="page-link" value="@Model.PageCount">Cuối</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="confirmFixChoosen">Xác nhận</button>

            </div>
        </div>
    </div>
</div>
