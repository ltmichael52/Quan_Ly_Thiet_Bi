@using ThietBiDienTu_2.Areas.Admin.ViewModels;
@using ThietBiDienTu_2.Models;
@{
    ViewData["Title"] = "CreateEmployee";
}

@model ThietBiDienTu_2.Models.Sinhvien
@section naviheader{
    <div class="header-divider"></div>
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin/HomeAdmin/Index">Home</a></li>
                <li class="breadcrumb-item"><a href="/Admin/UserStudent/Index">Danh sách sinh viên</a></li>
                <li class="breadcrumb-item active" aria-current="page">Thêm sinh viên</li>
            </ol>
        </nav>
    </div>
}
<!-- Content Header (Page header) -->
<div class="card">
    <div class="card-header">
        <h3>Thêm sinh viên</h3>
    </div>
    <div class="card-body ">
        <div class="bs-stepper linear">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Create", "UserStudent", FormMethod.Post, new { }))
                {
                    <!-- your steps content here -->
                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group mb-2">
                            <label for="Masv" class="mb-2"><strong>Mã sinh viên<span class="text-danger"> *</span></strong></label>
                            @Html.TextBoxFor(x => x.Masv, new { @class = "form-control",@id="masvInput" })
                            @Html.ValidationMessageFor(x => x.Masv, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-2">
                            <label for="Tensv" class="mb-2"><strong>Tên sinh viên<span class="text-danger"> *</span></strong></label>
                            @Html.TextBoxFor(x => x.Tensv, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Tensv, null, new { @class = "text-danger" })
                        </div>
                        @{
                            StuAcc newSA = new StuAcc();
                            List<string> CourseName = newSA.CourseName;
                            List<string> MajorName = newSA.MajorName;
                        }
                        <div class="form-group mb-2">
                            <label for="Khoa" class="mb-2"><strong>Khoá<span class="text-danger"> *</span></strong></label>
                            @Html.DropDownListFor(x => x.Khoa, new SelectList(CourseName), "Chọn Khoá", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Khoa, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-2">
                            <label for="Nganh" class="mb-2"><strong>Ngành<span class="text-danger"> *</span></strong></label>
                            @Html.DropDownListFor(x=>x.Nganh,new SelectList(MajorName),"Chọn Ngành", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x=>x.Nganh,null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-2">
                            <label class="mb-2"><strong>Điểm rèn luyện<span class="text-danger"> *</span></strong></label>
                            <input asp-for="@Model.Diemrenluyen" class="form-control" style="background-color:#E8E8E8;"
                            type="text" value="100" aria-label="readonly input example" readonly>
                        </div>
                        <div class="form-group mb-2">
                            <label class="mb-2"><strong>Mật khẩu<span class="text-danger"> *</span></strong></label>
                            <input class="form-control" type="text" value="123456" aria-label="readonly input example" style="background-color:#E8E8E8;" readonly>
                        </div>

                        <div class="form-group mb-2">
                            <label for="Email" class="mb-2"><strong>Email<span class="text-danger"> *</span></strong></label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-2">
                            <label for="Sdt" class="mb-2"><strong>Số điện thoại<span class="text-danger"> *</span></strong></label>
                            @Html.TextBoxFor(x => x.Sdt, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Sdt, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-2">
                            <label for="Diachi" class="mb-2"><strong>Địa chỉ</strong></label>
                            @Html.TextBoxFor(x => x.Diachi, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Diachi, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-2">
                            <label for="Gioitinh"><strong>Giới tính<span class="text-danger"> *  </span></strong></label>
                            @Html.RadioButtonFor(x => x.Gioitinh, "Nam") Nam @Html.RadioButtonFor(x => x.Gioitinh, "Nữ") Nữ
                            <div class="text-danger">
                                @Html.ValidationMessageFor(x => x.Gioitinh, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group mb-2">
                            <label for="Ngaysinh" class="mb-2"><strong>Ngày sinh<span class="text-danger"> *</span></strong></label>
                            @Html.TextBoxFor(x => x.Ngaysinh, new { @class = "form-control",placeholder="DD/MM/YYYY" })
                            @Html.ValidationMessageFor(x => x.Ngaysinh, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group mt-3">
                            <a href="/Admin/UserStudent/Index" class="btn btn-danger">Quay lại</a>
                            <button type="submit" class="btn btn-primary">Tạo mới</button>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


<div class="footer"></div>
