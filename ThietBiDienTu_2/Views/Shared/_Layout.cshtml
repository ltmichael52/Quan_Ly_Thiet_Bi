@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>

<html lang="en">
<head>
    <title>@ViewData["Title"] - AdminPage</title>
    <base href="./">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta name="description" content="CoreUI - Open Source Bootstrap Admin Template">
    <meta name="author" content="Łukasz Holeczek">
    <meta name="keyword" content="Bootstrap,Admin,Template,Open,Source,jQuery,CSS,HTML,RWD,Dashboard">

    <link rel="apple-touch-icon" sizes="57x57" href="@Url.Content("~/LayoutAdmin/dist/assets/favicon/apple-icon-57x57.png")">
    <link rel="apple-touch-icon" sizes="60x60" href="@Url.Content("~/LayoutAdmin/dist/assets/favicon/apple-icon-60x60.png")">
    <link rel="apple-touch-icon" sizes="72x72" href="@Url.Content("~/LayoutAdmin/dist/assets/favicon/apple-icon-72x72.png")">
    <link rel="apple-touch-icon" sizes="76x76" href="@Url.Content("~/LayoutAdmin/dist/assets/favicon/apple-icon-76x76.png")">
    <link rel="apple-touch-icon" sizes="114x114" href="@Url.Content("~/LayoutAdmin/dist/assets/favicon/apple-icon-114x114.png")">
    <link rel="apple-touch-icon" sizes="120x120" href="@Url.Content("~/LayoutAdmin/dist/assets/favicon/apple-icon-120x120.png")">
    <link rel="apple-touch-icon" sizes="144x144" href="@Url.Content("~/LayoutAdmin/dist/assets/favicon/apple-icon-144x144.png")">
    <link rel="apple-touch-icon" sizes="152x152" href="@Url.Content("~/LayoutAdmin/dist/assets/favicon/apple-icon-152x152.png")">
    <link rel="apple-touch-icon" sizes="180x180" href="@Url.Content("~/LayoutAdmin/dist/assets/favicon/apple-icon-180x180.png")">
    <link rel="icon" type="image/png" sizes="192x192" href="@Url.Content("~/LayoutAdmin/dist/assets/favicon/android-icon-192x192.png")">
    <link rel="icon" type="image/png" sizes="32x32" href="@Url.Content("~/LayoutAdmin/dist/assets/favicon/favicon-32x32.png")">
    <link rel="icon" type="image/png" sizes="96x96" href="@Url.Content("~/LayoutAdmin/dist/assets/favicon/favicon-96x96.png")">
    <link rel="icon" type="image/png" sizes="16x16" href="@Url.Content("~/LayoutAdmin/dist/assets/favicon/favicon-16x16.png")">
    <link rel="manifest" href="@Url.Content("~/LayoutAdmin/dist/assets/favicon/manifest.json")">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="LayoutAdmin/dist/assets/favicon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <!-- Vendors styles-->
    <link rel="stylesheet" href="@Url.Content("~/LayoutAdmin/dist/vendors/simplebar/css/simplebar.css")">
    <link rel="stylesheet" href="@Url.Content("~/LayoutAdmin/dist/css/vendors/simplebar.css")">
    <!-- Main styles for this application-->
    <link href="@Url.Content("~/LayoutAdmin/dist/css/style.css")" rel="stylesheet">
    <!-- We use those styles to show code examples, you should remove them in your application.-->
    <link href="@Url.Content("~/LayoutAdmin/dist/css/examples.css")" rel="stylesheet">
</head>
<body>
    <div class="sidebar sidebar-dark sidebar-fixed" id="sidebar">
        <div class="sidebar-brand d-none d-md-flex">
            <svg class="sidebar-brand-full" width="118" height="46" alt="CoreUI Logo">
                <use xlink:href="@Url.Content("~/LayoutAdmin/dist/assets/brand/coreui.svg#full")"></use>
            </svg>
            <svg class="sidebar-brand-narrow" width="46" height="46" alt="CoreUI Logo">
                <use xlink:href="@Url.Content("~/LayoutAdmin/dist/assets/brand/coreui.svg#signet")"></use>
            </svg>
        </div>
        <ul class="sidebar-nav" data-coreui="navigation" data-simplebar="">
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Home">
                    <svg class="nav-icon">
                        <use xlink:href="@Url.Content("~/LayoutAdmin/dist/vendors/_coreui/icons/svg/free.svg#cil-home")"></use>
                    </svg>Home
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="colors.html">
                    <svg class="nav-icon">
                        <use xlink:href="@Url.Content("~/LayoutAdmin/dist/vendors/_coreui/icons/svg/free.svg#cil-devices")"></use>
                    </svg> Quản lý thiết bị
                </a>
            </li>

            <li class="nav-group">
                <a class="nav-link nav-group-toggle" href="#">
                    <svg class="nav-icon">
                        <use xlink:href="@Url.Content("~/LayoutAdmin/dist/vendors/_coreui/icons/svg/free.svg#cil-notes")"></use>
                    </svg> Mượn trả thiết bị
                </a>
                <ul class="nav-group-items">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Borrow">
                            <svg class="nav-icon">
                                <use xlink:href="@Url.Content("~/LayoutAdmin/dist/vendors/_coreui/icons/svg/free.svg#cil-note-add")"></use>
                            </svg>Phiếu mượn
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="base/breadcrumb.html">
                            <svg class="nav-icon">
                                <use xlink:href="@Url.Content("~/LayoutAdmin/dist/vendors/_coreui/icons/svg/free.svg#cil-note-add")"></use>
                            </svg>Phiếu trả
                        </a>
                    </li>
                </ul>
            </li>


        </ul>
        <button class="sidebar-toggler" type="button" data-coreui-toggle="unfoldable"></button>
    </div>
    <div class="wrapper d-flex flex-column min-vh-100 bg-light">
        <header class="header header-sticky mb-4">
            <div class="container-fluid">
                <button class="header-toggler px-md-0 me-md-3" type="button" onclick="coreui.Sidebar.getInstance(document.querySelector('#sidebar')).toggle()">
                    <svg class="icon icon-lg">
                        <use xlink:href="@Url.Content("~/LayoutAdmin/dist/vendors/_coreui/icons/svg/free.svg#cil-menu")"></use>
                    </svg>
                </button>
                @RenderSection("searchArea",required:false)

                <ul class="header-nav ms-3">
                    <li style="margin-right: 10px;">
                        <a asp-action="Index" asp-controller="Cart">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="black" class="bi bi-cart" viewBox="0 0 16 16" style="margin-left: -5px; margin-right: 5px;">
                                <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l1.313 7h8.17l1.313-7zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                            </svg>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link py-0" data-coreui-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            <div class="avatar avatar-md"><img class="avatar-img" src="@Url.Content("~/LayoutAdmin/dist/assets/img/avatars/8.jpg")" alt="user@email.com"></div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end pt-0">
                            <a class="dropdown-item" href="#">
                                <svg class="icon me-2">
                                    <use xlink:href="@Url.Content("~/LayoutAdmin/dist/vendors/_coreui/icons/svg/free.svg#cil-settings")"></use>
                                </svg> Tài khoản
                            </a>
                            <a class="dropdown-item" asp-action="Logout" asp-area="" asp-controller="Access">
                                <svg class="icon me-2">
                                    <use xlink:href="@Url.Content("~/LayoutAdmin/dist/vendors/_coreui/icons/svg/free.svg#cil-account-logout")"></use>
                                </svg> Đăng xuất
                            </a>
                        </div>
                    </li>
                </ul>
                @RenderSection("naviheader",required:false)
            </div>

        </header>
        <div class="body flex-grow-1 px-3">
            <div class="container-lg">
                @RenderBody()
            </div>
        </div>
        <footer class="footer">
            <div>G1 Company</a> © 2024 G1_Labs.</div>
            <div class="ms-auto">Powered by&nbsp C#</div>
        </footer>
    </div>
    <!-- CoreUI and necessary plugins-->
    <script src="@Url.Content("~/LayoutAdmin/dist/vendors/_coreui/coreui/js/coreui.bundle.min.js")"></script>
    <script src="@Url.Content("~/LayoutAdmin/dist/vendors/simplebar/js/simplebar.min.js")"></script>


</body>
</html>
