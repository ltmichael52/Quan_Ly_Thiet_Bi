@model Taikhoan
<!DOCTYPE html>


<html lang="en">
<head>
    <base href="./">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta name="description" content="CoreUI - Open Source Bootstrap Admin Template">
    <meta name="author" content="Łukasz Holeczek">
    <meta name="keyword" content="Bootstrap,Admin,Template,Open,Source,jQuery,CSS,HTML,RWD,Dashboard">
    <title>CoreUI Free Bootstrap Admin Template</title>
   <link rel="apple-touch-icon" sizes="57x57" href="~/LayoutAdmin/dist/assets/favicon/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="~/LayoutAdmin/dist/assets/favicon/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/LayoutAdmin/dist/assets/favicon/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/LayoutAdmin/dist/assets/favicon/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/LayoutAdmin/dist/assets/favicon/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/LayoutAdmin/dist/assets/favicon/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="~/LayoutAdmin/dist/assets/favicon/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/LayoutAdmin/dist/assets/favicon/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="~/LayoutAdmin/dist/assets/favicon/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="~/LayoutAdmin/dist/assets/favicon/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/LayoutAdmin/dist/assets/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/LayoutAdmin/dist/assets/favicon/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/LayoutAdmin/dist/assets/favicon/favicon-16x16.png">
    <link rel="manifest" href="~/LayoutAdmin/dist/assets/favicon/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="LayoutAdmin/dist/assets/favicon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <!-- Vendors styles-->
    <link rel="stylesheet" href="~/LayoutAdmin/dist/vendors/simplebar/css/simplebar.css">
    <link rel="stylesheet" href="~/LayoutAdmin/dist/css/vendors/simplebar.css">
    <!-- Main styles for this application-->
    <link href="~/LayoutAdmin/dist/css/style.css" rel="stylesheet">
    <!-- We use those styles to show code examples, you should remove them in your application.-->
    <link href="~/LayoutAdmin/dist/css/examples.css" rel="stylesheet">
</head>
<body>
    <div class="bg-light min-vh-100 d-flex align-items-center justify-content-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <!-- Adjusted col-lg-6 to make the card smaller -->
                    <div class="card p-4 mb-0">
                        <form class="card-body" method="post" asp-action="Login" asp-controller="Access">
                            <h1 class="text-center">Phần Mềm Quản Lý Thiết Bị Điện Tử SIU</h1>
                            <p class="text-medium-emphasis text-center">Đăng nhập vào tài khoản</p>
                            <div class="input-group mb-3">
                                <span class="input-group-text">
                                    <svg class="icon">
                                        <use xlink:href="~/LayoutAdmin/dist/vendors/_coreui/icons/svg/free.svg#cil-user"></use>
                                    </svg>
                                </span>
                                <input class="form-control" type="text" placeholder="Mã tài khoản" asp-for="Matk" required="required" autofocus="autofocus"/>                         
                            </div>
                            <div class="input-group mb-3">
                                <!-- Adjusted mb-4 to mb-3 for smaller spacing -->
                                <span class="input-group-text">
                                    <svg class="icon">
                                        <use xlink:href="~/LayoutAdmin/dist/vendors/_coreui/icons/svg/free.svg#cil-lock-locked"></use>
                                    </svg>
                                </span>
                                <input class="form-control" type="password" placeholder="Mật khẩu" asp-for="Matkhau" required="required"/>
                                
                            </div>
                            <span asp-validation-for="Matkhau" class="text-danger"></span>
                            <div class="row">
                                <div class="col-12">
                                    <!-- Adjusted col-6 to col-12 for full width button -->
                                    <button class="btn btn-primary w-100" type="submit" asp-action="Login">Login</button>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-12 text-center">
                                    <button class="btn btn-link px-0" type="button">Quên mật khẩu?</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CoreUI and necessary plugins-->
    <script src="~/LayoutAdmin/dist/vendors/_coreui/coreui/js/coreui.bundle.min.js"></script>
    <script src="~/LayoutAdmin/dist/vendors/simplebar/js/simplebar.min.js"></script>
    <script>
    </script>

</body>
</html>
